<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" stylesheets="@style.css" vgap="10" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.ControllerPrintTable">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <BorderPane prefHeight="800.0" prefWidth="1100.0" styleClass="borderPane">
         <top>
            <ButtonBar buttonMinWidth="50.0" prefHeight="62.0" BorderPane.alignment="CENTER">
              <buttons>
                  <ComboBox fx:id="cbTables" minWidth="-Infinity" prefHeight="25.0" prefWidth="586.0" />
                <Button fx:id="btnOptions" alignment="CENTER" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="50.0" text="_Options" />
                  <Button fx:id="btnTables" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="50.0" text="_Details" />
                  <Button fx:id="btnExit" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="10.0" text="E_xit" />
              </buttons>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <padding>
                  <Insets left="30.0" right="30.0" />
               </padding>
            </ButtonBar>
         </top>
         <bottom>
            <Button fx:id="btnPrint" alignment="CENTER" text="_Print" BorderPane.alignment="CENTER" />
         </bottom>
         <left>
            <Button fx:id="btnPrev" alignment="CENTER" text="&lt;" BorderPane.alignment="CENTER" />
         </left>
         <right>
            <Button fx:id="btnNext" alignment="CENTER" text="&gt;" BorderPane.alignment="CENTER" />
         </right>
         <center>
            <TableView fx:id="tableDatabase" editable="true" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="30.0" left="30.0" right="30.0" />
               </BorderPane.margin>
            </TableView>
         </center>
      </BorderPane>
   </children>
</GridPane>
